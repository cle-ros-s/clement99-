    // Animate progress bars with delay
    document.querySelectorAll('.progress').forEach((bar, index) => {
      const value = bar.getAttribute('data-progress');
      setTimeout(() => {
        bar.style.width = value + '%';
      }, index * 200); // stagger animation
    });
